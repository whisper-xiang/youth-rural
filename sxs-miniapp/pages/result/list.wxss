.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
}
.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.btn-add {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 项目列表 */
.project-list {
  padding: 24rpx;
}

.project-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.project-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.project-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  flex: 1;
  line-height: 1.4;
}

.project-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 16rpx;
}

.status-pending {
  color: #fa8c16;
  background: #fff7e6;
}

.status-college_approved {
  color: #1890ff;
  background: #e6f7ff;
}

.status-approved {
  color: #52c41a;
  background: #f6ffed;
}

.status-rejected {
  color: #ff4d4f;
  background: #fff2f0;
}

.project-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
}

.project-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.progress-count {
  display: flex;
  align-items: baseline;
}

.count-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #2b5aed;
  margin-right: 8rpx;
}

.count-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

.progress-arrow {
  font-size: 32rpx;
  color: #2b5aed;
  font-weight: bold;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}
.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}
