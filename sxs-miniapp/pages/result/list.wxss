.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
}
.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.btn-add {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 分类筛选 */
.category-scroll {
  background: #fff;
  white-space: nowrap;
  border-bottom: 1rpx solid #f0f0f0;
}
.category-list {
  display: inline-flex;
  padding: 20rpx 24rpx;
}
.category-item {
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 32rpx;
}
.category-item.active {
  color: #fff;
  background: #2b5aed;
}

/* 成果列表 */
.list {
  padding: 24rpx;
}
.card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.card-cover {
  width: 100%;
  height: 280rpx;
  background: #e8e8e8;
}
.card-content {
  padding: 24rpx;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.meta-team {
  font-size: 24rpx;
  color: #2b5aed;
  margin-right: 16rpx;
}
.meta-category {
  font-size: 22rpx;
  color: #8c8c8c;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.card-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.footer-info {
  display: flex;
  flex-direction: column;
}
.info-college {
  font-size: 22rpx;
  color: #8c8c8c;
}
.info-date {
  font-size: 22rpx;
  color: #bfbfbf;
  margin-top: 4rpx;
}
.footer-stats {
  display: flex;
}
.stat-item {
  font-size: 22rpx;
  color: #8c8c8c;
  margin-left: 20rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}
.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}
