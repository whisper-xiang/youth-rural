/* 项目工作台页面样式 */
page {
  background: #f5f5f5;
}

/* 项目头部 */
.project-header {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
}

.project-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.project-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.project-role {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.project-role.leader {
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.project-role.member {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.role-icon {
  margin-right: 8rpx;
}

.project-status {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-progress {
  background: #e6f7ff;
  color: #1890ff;
}

.status-pending {
  background: #fff7e6;
  color: #faad14;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-icon {
  margin-right: 8rpx;
}

/* Tab 导航 */
.tab-container {
  background: #fff;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.tab-list {
  display: flex;
  align-items: center;
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  margin-right: 48rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #2b5aed;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: 16rpx;
  right: -12rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 内容区域 */
.content-container {
  background: #fff;
  min-height: calc(100vh - 200rpx);
}

.tab-content {
  padding: 24rpx;
}

/* 项目详情样式 */
.detail-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #2b5aed;
}

.info-card {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #1a1a1a;
  flex: 1;
}

/* 团队成员 */
.team-list {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 16rpx;
}

.team-item {
  display: flex;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.team-item:last-child {
  margin-bottom: 0;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #2b5aed;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.member-role {
  font-size: 24rpx;
  color: #666;
}

.member-contact {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #2b5aed;
}

.contact-icon {
  margin-right: 8rpx;
}

/* 指导老师 */
.teacher-info {
  display: flex;
  align-items: center;
  background: #fafafa;
  border-radius: 16rpx;
  padding: 32rpx;
}

.teacher-avatar {
  width: 100rpx;
  height: 100rpx;
  background: #52c41a;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 32rpx;
}

.teacher-details {
  flex: 1;
}

.teacher-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.teacher-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.teacher-department {
  font-size: 24rpx;
  color: #8c8c8c;
}

.teacher-contact {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #2b5aed;
}

/* 时间线 */
.timeline {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.timeline-dot.completed {
  background: #52c41a;
  border: 4rpx solid #b7eb8f;
}

.timeline-dot.current {
  background: #1890ff;
  border: 4rpx solid #91d5ff;
  animation: pulse 2s infinite;
}

.timeline-dot.pending {
  background: #d9d9d9;
  border: 4rpx solid #f0f0f0;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(24, 144, 255, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(24, 144, 255, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(24, 144, 255, 0);
  }
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 进度记录 */
.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.add-progress-btn {
  display: flex;
  align-items: center;
  background: #2b5aed;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  margin: 0;
  line-height: 1.5;
}

.add-progress-btn:active {
  opacity: 0.8;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.btn-text {
  font-weight: 500;
}

.progress-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress-item {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.progress-date {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 16rpx;
}

.progress-content {
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.progress-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.progress-files {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.file-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #2b5aed;
  border: 1rpx solid #e6f0ff;
  transition: all 0.2s ease;
}

.file-item:active {
  background: #e6f0ff;
  transform: scale(0.98);
}

.file-icon {
  margin-right: 8rpx;
}

.progress-author {
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: right;
}

/* 成果材料 */
.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.upload-btn {
  display: flex;
  align-items: center;
  background: #52c41a;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 4rpx 24rpx;
  font-size: 26rpx;
}

.category-section {
  margin-bottom: 48rpx;
}

.category-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.category-icon {
  margin-right: 12rpx;
}

.category-name {
  color: #666;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.document-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.document-item {
  display: flex;
  align-items: center;
  background: #fafafa;
  padding: 20rpx;
  border-radius: 12rpx;
}

.doc-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.doc-name {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.doc-size {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-right: 16rpx;
}

.doc-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #2b5aed;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: #f0f9ff;
}

.action-btn.delete {
  color: #ff4d4f;
  background: #fff2f0;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.video-item {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.video-player {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.video-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.video-name {
  font-size: 28rpx;
  color: #1a1a1a;
}

.video-duration {
  font-size: 24rpx;
  color: #8c8c8c;
}

.video-actions {
  display: flex;
  justify-content: flex-end;
}

/* 结项申请 */
.closure-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.closure-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.closure-status {
  padding: 8rpx 16rpx;
  background: #f0f9ff;
  color: #1890ff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.closure-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-section {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.form-input {
  background: #fafafa;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  resize: none;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 12rpx;
}

.form-actions {
  display: flex;
}

.submit-btn {
  flex: 1;
  padding: 24rpx;
  background: #2b5aed;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.submit-btn[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

/* 老师反馈 */
.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.feedback-count {
  font-size: 24rpx;
  color: #8c8c8c;
}

.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feedback-item {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.feedback-header-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.feedback-author {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.feedback-time {
  font-size: 24rpx;
  color: #8c8c8c;
}

.feedback-type {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.feedback-type.progress {
  background: #e6f7ff;
  color: #1890ff;
}

.feedback-type.plan {
  background: #f6ffed;
  color: #52c41a;
}

.feedback-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.feedback-target {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8c8c8c;
}

.target-label {
  margin-right: 8rpx;
}

.target-text {
  color: #2b5aed;
}

/* 空状态 */
.empty-progress,
.empty-result,
.empty-feedback {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8c8c8c;
  text-align: center;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-close {
  font-size: 48rpx;
  color: #8c8c8c;
  line-height: 1;
}

.modal-body {
  padding: 32rpx;
}

.modal-footer {
  display: flex;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 24rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  background: #fafafa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  background: #f0f5ff;
  border-color: #2b5aed;
}

.upload-area:active .upload-text {
  color: #2b5aed;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #8c8c8c;
}

.file-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.file-list .file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fafafa;
  padding: 16rpx;
  border-radius: 8rpx;
}

.file-name {
  font-size: 26rpx;
  color: #1a1a1a;
}

.file-remove {
  font-size: 32rpx;
  color: #ff4d4f;
  line-height: 1;
}

.cancel-btn {
  flex: 1;
  padding: 24rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn:active {
  background: #eeeeee;
}

.confirm-btn {
  flex: 1;
  padding: 24rpx;
  background: #2b5aed;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.confirm-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 评优情况 */
.evaluation-card {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.excellent-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #ff9c6e, #ff4d4f);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 24rpx;
  border-radius: 0 20rpx 0 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 77, 79, 0.3);
}

.eval-main {
  margin-bottom: 40rpx;
}

.eval-label {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 30rpx;
}

.eval-summary {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  background: #fcfcfc;
  border-radius: 16rpx;
}

.eval-summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.eval-summary-item:not(:last-child) {
  border-right: 1rpx solid #f0f0f0;
}

.eval-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.eval-value.score {
  color: #2b5aed;
}

.eval-value.award {
  color: #faad14;
  font-size: 40rpx;
}

.section-subtitle {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 40rpx 0 24rpx;
  display: flex;
  align-items: center;
}

.section-subtitle::before {
  content: "";
  width: 8rpx;
  height: 32rpx;
  background: #2b5aed;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.expert-opinion-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.expert-opinion-item {
  background: #f9f9f9;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #e8e8e8;
}

.expert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.expert-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #595959;
}

.expert-score {
  font-size: 26rpx;
  font-weight: 600;
  color: #2b5aed;
}

.expert-comment {
  font-size: 28rpx;
  color: #434343;
  line-height: 1.6;
}

.empty-evaluation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-eval-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-eval-text {
