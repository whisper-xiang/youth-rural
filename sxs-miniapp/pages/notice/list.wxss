.page {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部分类标签 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.tab.active {
  color: #2b5aed;
  font-weight: 500;
}
.tab.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #2b5aed;
  border-radius: 2rpx;
}

/* 通知列表 */
.list {
  padding: 24rpx;
}
.notice-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.notice-item.unread {
  background: #fafbff;
}
.notice-dot {
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #ff4d4f;
  border-radius: 50%;
}
.notice-content {
  flex: 1;
  overflow: hidden;
}
.notice-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.notice-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}
.tag-notice {
  background: #e6f7ff;
  color: #1890ff;
}
.tag-policy {
  background: #fff7e6;
  color: #fa8c16;
}
.tag-activity {
  background: #f6ffed;
  color: #52c41a;
}
.notice-top {
  font-size: 20rpx;
  color: #ff4d4f;
  background: #fff2f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.notice-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.notice-item.unread .notice-title {
  font-weight: 600;
}
.notice-summary {
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.notice-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.notice-source {
  font-size: 22rpx;
  color: #2b5aed;
}
.notice-time {
  font-size: 22rpx;
  color: #bfbfbf;
}
.notice-arrow {
  font-size: 32rpx;
  color: #d9d9d9;
  margin-left: 16rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 24rpx;
  font-size: 26rpx;
  color: #bfbfbf;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 100rpx;
  color: #8c8c8c;
  font-size: 28rpx;
}
