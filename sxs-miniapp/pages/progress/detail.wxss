.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 160rpx;
}

/* 区块 */
.section {
  background: #fff;
  margin: 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
}
.section:first-child {
  margin-top: 0;
}
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 详情头部 */
.detail-header {
  margin-bottom: 16rpx;
}
.detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}
.detail-date {
  font-size: 26rpx;
  color: #8c8c8c;
}
.detail-meta {
  display: flex;
  flex-wrap: wrap;
}
.meta-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 32rpx;
}

/* 详情内容 */
.detail-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}
.grid-image {
  width: calc(33.33% - 16rpx);
  height: 200rpx;
  margin: 8rpx;
  border-radius: 8rpx;
}

/* 评论 */
.comment-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.comment-item:last-child {
  border-bottom: none;
}
.comment-user {
  font-size: 26rpx;
  color: #2b5aed;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.comment-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8rpx;
}
.comment-time {
  font-size: 22rpx;
  color: #bfbfbf;
}

/* 表单 */
.form {
  padding-bottom: 0;
}
.form-item {
  margin-bottom: 24rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.required {
  color: #ff4d4f;
}
.input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.textarea {
  width: 100%;
  height: 240rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}
.picker.placeholder {
  color: #bfbfbf;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}
.upload-item {
  position: relative;
  width: calc(33.33% - 16rpx);
  height: 180rpx;
  margin: 8rpx;
}
.upload-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.upload-delete {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload-btn {
  width: calc(33.33% - 16rpx);
  height: 180rpx;
  margin: 8rpx;
  background: #f7f8fa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.upload-icon {
  font-size: 48rpx;
  color: #bfbfbf;
}
.upload-text {
  font-size: 24rpx;
  color: #bfbfbf;
  margin-top: 8rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.btn-submit {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #2b5aed;
  border-radius: 12rpx;
}
