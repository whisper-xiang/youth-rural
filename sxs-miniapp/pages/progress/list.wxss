.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
}
.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.btn-add {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 时间线 */
.timeline {
  padding: 32rpx 24rpx 32rpx 48rpx;
}
.timeline-item {
  position: relative;
  padding-left: 32rpx;
  padding-bottom: 32rpx;
}
.timeline-item:last-child {
  padding-bottom: 0;
}
.timeline-dot {
  position: absolute;
  left: -8rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #2b5aed;
  border-radius: 50%;
  border: 4rpx solid #e8f0fe;
}
.timeline-line {
  position: absolute;
  left: -2rpx;
  top: 28rpx;
  bottom: 0;
  width: 4rpx;
  background: #e8e8e8;
}

/* 时间线内容 */
.timeline-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}
.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.content-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
}
.content-date {
  font-size: 24rpx;
  color: #8c8c8c;
}
.content-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 图片缩略图 */
.content-images {
  display: flex;
  margin-bottom: 16rpx;
}
.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}
.image-count {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部信息 */
.content-footer {
  display: flex;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}
.footer-user {
  font-size: 24rpx;
  color: #2b5aed;
  margin-right: 24rpx;
}
.footer-team {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}
.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}
