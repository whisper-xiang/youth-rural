.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.top-three {
  border-left: 10rpx solid #2b5aed;
  background: linear-gradient(to right, #ffffff, #f0f4ff);
}

.rank-number {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rank-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.rank-1 {
  background-color: #ffd700;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(255, 215, 0, 0.3);
}

.rank-2 {
  background-color: #c0c0c0;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(192, 192, 192, 0.3);
}

.rank-3 {
  background-color: #cd7f32;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(205, 127, 50, 0.3);
}

.project-info {
  flex: 1;
  padding: 0 20rpx;
}

.project-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.project-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.separator {
  margin: 0 10rpx;
  color: #eee;
}

.award-badge {
  display: inline-block;
  background-color: #eef2ff;
  border: 1rpx solid #2b5aed;
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
}

.award-text {
  font-size: 22rpx;
  color: #2b5aed;
  font-weight: 500;
}

.score-box {
  text-align: center;
  border-left: 2rpx solid #f0f0f0;
  padding-left: 30rpx;
  min-width: 120rpx;
}

.score-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2b5aed;
  line-height: 1;
}

.score-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}
