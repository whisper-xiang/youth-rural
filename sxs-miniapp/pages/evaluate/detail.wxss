.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 160rpx;
}

/* 区块 */
.section {
  background: #fff;
  margin: 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
}
.section:first-child {
  margin-top: 0;
}
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 项目标题 */
.project-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  line-height: 1.4;
}
.project-meta {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.meta-row {
  display: flex;
  margin-bottom: 12rpx;
}
.meta-row:last-child {
  margin-bottom: 0;
}
.meta-label {
  font-size: 26rpx;
  color: #8c8c8c;
  width: 140rpx;
}
.meta-value {
  font-size: 26rpx;
  color: #1a1a1a;
}

/* 项目简介 */
.project-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* 材料列表 */
.material-list {
  margin: -8rpx 0;
}
.material-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.material-item:last-child {
  border-bottom: none;
}
.material-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.material-pdf {
  background: #ff4d4f;
}
.material-excel {
  background: #52c41a;
}
.material-video {
  background: #1890ff;
}
.material-zip {
  background: #722ed1;
}
.material-info {
  flex: 1;
}
.material-name {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}
.material-size {
  font-size: 22rpx;
  color: #bfbfbf;
}
.material-action {
  font-size: 26rpx;
  color: #2b5aed;
}

/* 评分项 */
.score-item {
  margin-bottom: 32rpx;
}
.score-item:last-of-type {
  margin-bottom: 24rpx;
}
.score-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.score-name {
  font-size: 28rpx;
  color: #1a1a1a;
}
.score-weight {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-left: 8rpx;
}
.score-slider {
  display: flex;
  align-items: center;
}
.score-slider slider {
  flex: 1;
}
.score-current {
  width: 60rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #2b5aed;
}

/* 总分 */
.total-score {
  display: flex;
  align-items: baseline;
  justify-content: center;
  padding: 24rpx;
  background: #f0f5ff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.total-label {
  font-size: 28rpx;
  color: #666;
}
.total-value {
  font-size: 56rpx;
  font-weight: 600;
  color: #2b5aed;
  margin: 0 8rpx;
}
.total-max {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 评语 */
.comment-area {
  margin-top: 24rpx;
}
.comment-label {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}
.comment-input {
  width: 100%;
  height: 200rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}

/* 已评审结果 */
.result-score {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}
.result-label {
  font-size: 26rpx;
  color: #8c8c8c;
}
.result-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #2b5aed;
  margin: 0 8rpx;
}
.result-max {
  font-size: 26rpx;
  color: #bfbfbf;
}
.result-comment {
  margin-bottom: 16rpx;
}
.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}
.result-time {
  font-size: 24rpx;
  color: #bfbfbf;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.btn-submit {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #2b5aed;
  border-radius: 12rpx;
}
