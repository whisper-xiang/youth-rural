.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 顶部筛选标签 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.tab.active {
  color: #2b5aed;
  font-weight: 500;
}
.tab.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #2b5aed;
  border-radius: 2rpx;
}

/* 列表 */
.list {
  padding: 24rpx;
}
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}
.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}
.status-evaluated {
  background: #f6ffed;
  color: #52c41a;
}

/* 卡片内容 */
.card-body {
  padding-bottom: 16rpx;
}
.info-row {
  display: flex;
  margin-bottom: 10rpx;
}
.info-row:last-child {
  margin-bottom: 0;
}
.info-label {
  font-size: 24rpx;
  color: #8c8c8c;
  width: 140rpx;
}
.info-value {
  font-size: 24rpx;
  color: #1a1a1a;
  flex: 1;
}

/* 分数显示 */
.card-score {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.score-label {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-right: 12rpx;
}
.score-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #2b5aed;
}
.score-total {
  font-size: 24rpx;
  color: #bfbfbf;
  margin-left: 4rpx;
}

/* 操作按钮 */
.card-action {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.btn-evaluate {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
}
