.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 表单区域 */
.form {
  padding: 24rpx;
}
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.required {
  color: #ff4d4f;
}
.input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.input[disabled] {
  color: #8c8c8c;
}
.textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.textarea.tall {
  height: 240rpx;
}
.textarea[disabled] {
  color: #8c8c8c;
}

/* 选择器 */
.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}
.picker.placeholder {
  color: #bfbfbf;
}

/* 日期范围 */
.date-range {
  display: flex;
  align-items: center;
}
.date-picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: center;
}
.date-picker.placeholder {
  color: #bfbfbf;
}
.date-sep {
  margin: 0 16rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}
.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2b5aed;
  background: #fff;
  border: 2rpx solid #2b5aed;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #2b5aed;
  border-radius: 12rpx;
}
.btn-result {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #52c41a;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.btn-progress {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #1890ff;
  border-radius: 12rpx;
}

.btn-close {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #faad14;
  border-radius: 12rpx;
}

/* 状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
.status-label {
  font-size: 28rpx;
  color: #8c8c8c;
}
.status-value {
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 8rpx;
}
.status-pending {
  color: #fa8c16;
}
.status-approved {
  color: #52c41a;
}
.status-closed {
  color: #2b5aed;
}
.status-rejected {
  color: #ff4d4f;
}

.result-entry {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.result-entry-left {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.result-entry-right {
  display: flex;
  align-items: center;
}

.result-count {
  font-size: 28rpx;
  color: #2b5aed;
  font-weight: 600;
  margin-right: 12rpx;
}

.result-arrow {
  font-size: 26rpx;
  color: #8c8c8c;
}

.btn-result {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

/* 团队成员列表样式 */
.members-list {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
}

.member-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #1890ff;
}

.member-item:last-child {
  margin-bottom: 0;
}

.member-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 8rpx;
}

.member-role {
  font-size: 28rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.member-resp {
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.4;
}

.no-members {
  text-align: center;
  color: #8c8c8c;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.members-text {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  color: #262626;
  font-size: 30rpx;
  line-height: 1.5;
}
