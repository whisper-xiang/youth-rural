.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 表单区域 */
.form {
  padding: 24rpx;
}
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-badge {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.status-badge.status-pending {
  color: #fa8c16;
  background: #fff7e6;
  border: 1rpx solid #ffe7ba;
}

.status-badge.status-approved,
.status-badge.status-school_approved {
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.status-badge.status-closed {
  color: #2b5aed;
  background: #f0f5ff;
  border: 1rpx solid #adc6ff;
}

.status-badge.status-rejected {
  color: #ff4d4f;
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
}

.status-badge.status-withdrawn {
  color: #8c8c8c;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.required {
  color: #ff4d4f;
}
.input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.input[disabled] {
  color: #8c8c8c;
}
.textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.textarea.tall {
  height: 240rpx;
}
.textarea[disabled] {
  color: #8c8c8c;
}

/* 选择器 */
.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}
.picker.placeholder {
  color: #bfbfbf;
}

/* 日期范围 */
.date-range {
  display: flex;
  align-items: center;
}
.date-picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: center;
}
.date-picker.placeholder {
  color: #bfbfbf;
}
.date-sep {
  margin: 0 16rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}
.btn-edit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2b5aed;
  background: #fff;
  border: 2rpx solid #2b5aed;
  border-radius: 12rpx;
}
.btn-revoke {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #8c8c8c;
  background: #fff;
  border: 2rpx solid #d9d9d9;
  border-radius: 12rpx;
}
.btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #2b5aed;
  border-radius: 12rpx;
}
.footer view + view {
  margin-left: 24rpx;
}
.btn-result {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #52c41a;
  border-radius: 12rpx;
}
.btn-progress {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #1890ff;
  border-radius: 12rpx;
}

.btn-close {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #faad14;
  border-radius: 12rpx;
}

/* 评优结果卡片 */
.evaluation-card {
  margin: 20rpx 30rpx;
  background: linear-gradient(135deg, #2b5aed, #4e7cfe);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(43, 90, 237, 0.2);
}

.evaluation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 15rpx;
}

.evaluation-title {
  font-size: 32rpx;
  font-weight: bold;
}

.evaluation-activity {
  font-size: 24rpx;
  opacity: 0.8;
}

.evaluation-body {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.evaluation-score-value,
.evaluation-award-level {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.evaluation-score-label,
.evaluation-award-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.evaluation-award-box {
  border-left: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-left: 60rpx;
}

.btn-result {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

/* 团队成员列表样式 */
.members-list {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
}

.member-item {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #2b5aed;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.member-role {
  font-size: 24rpx;
  color: #2b5aed;
  background: #f0f5ff;
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.member-contact {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #2b5aed;
}

.contact-icon {
  margin-right: 8rpx;
}

.member-resp {
  width: 100%;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  line-height: 1.4;
}

.no-members {
  text-align: center;
  color: #8c8c8c;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.members-text {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  color: #262626;
  font-size: 30rpx;
  line-height: 1.5;
}
