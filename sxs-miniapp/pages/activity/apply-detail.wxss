.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 160rpx;
}

/* 表单区域 */
.form {
  padding: 24rpx;
}
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.required {
  color: #ff4d4f;
}
.input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.input[disabled] {
  color: #8c8c8c;
}
.textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
}
.textarea.tall {
  height: 240rpx;
}
.textarea[disabled] {
  color: #8c8c8c;
}

/* 选择器 */
.picker {
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}
.picker.placeholder {
  color: #bfbfbf;
}

/* 日期范围 */
.date-range {
  display: flex;
  align-items: center;
}
.date-picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: center;
}
.date-picker.placeholder {
  color: #bfbfbf;
}
.date-sep {
  margin: 0 16rpx;
  color: #8c8c8c;
  font-size: 26rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #2b5aed;
  background: #fff;
  border: 2rpx solid #2b5aed;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #2b5aed;
  border-radius: 12rpx;
}

/* 状态栏 */
.status-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.status-label {
  font-size: 28rpx;
  color: #8c8c8c;
}
.status-value {
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 8rpx;
}
.status-pending {
  color: #fa8c16;
}
.status-approved {
  color: #52c41a;
}
.status-rejected {
  color: #ff4d4f;
}
