.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 流程提示 */
.process-tips {
  margin: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tips-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  flex: 1;
}

.tips-toggle {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tips-toggle:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.tips-content {
  padding: 24rpx;
}

.process-step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
  position: relative;
}

.process-step:last-child {
  margin-bottom: 0;
}

.process-step:not(:last-child)::after {
  content: "";
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  width: 2rpx;
  height: 32rpx;
  background: #e8e8e8;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.step-info {
  flex: 1;
  padding-top: 8rpx;
}

.step-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.step-role {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 400;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-left: 8rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
}
.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.btn-add {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 列表 */
.list {
  padding: 24rpx;
}
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}
.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}
.status-college_approved {
  background: #e6f7ff;
  color: #1890ff;
}
.status-approved {
  background: #f6ffed;
  color: #52c41a;
}
.status-closed {
  background: #f0f5ff;
  color: #2b5aed;
}
.status-rejected {
  background: #fff2f0;
  color: #ff4d4f;
}
.status-default {
  background: #f5f5f5;
  color: #8c8c8c;
}
.card-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}
.info-item {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-right: 32rpx;
}
.card-footer {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}
.card-time {
  font-size: 22rpx;
  color: #bfbfbf;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}
.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}
