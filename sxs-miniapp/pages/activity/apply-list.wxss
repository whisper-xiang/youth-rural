.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
}
.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.btn-add {
  font-size: 26rpx;
  color: #fff;
  background: #2b5aed;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 列表 */
.list {
  padding: 24rpx;
}
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}
.status-draft {
  background: #f5f5f5;
  color: #8c8c8c;
}
.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}
.status-college_approved {
  background: #e6f7ff;
  color: #1890ff;
}
.status-approved {
  background: #f6ffed;
  color: #52c41a;
}
.status-closed {
  background: #f0f5ff;
  color: #2b5aed;
}
.status-rejected {
  background: #fff2f0;
  color: #ff4d4f;
}
.status-default {
  background: #f5f5f5;
  color: #8c8c8c;
}
.card-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}
.info-item {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-right: 32rpx;
}
.card-footer {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}
.card-time {
  font-size: 22rpx;
  color: #bfbfbf;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}
.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}
