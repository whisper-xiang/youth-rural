.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #2b5aed 0%, #5b8def 50%, #f7f8fa 50%);
  padding-bottom: 60rpx;
}

/* Logo 区域 */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
}
.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 24rpx;
}
.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}
.app-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 角色选择 */
.role-section {
  margin: 0 32rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 24rpx;
}
.role-list {
  display: flex;
  flex-direction: column;
}
.role-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
}
.role-item:last-child {
  margin-bottom: 0;
}
.role-item.selected {
  border-color: #2b5aed;
  background: #f0f5ff;
}
.role-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}
.role-item.selected .role-icon {
  background: #e6f0ff;
}
.role-info {
  flex: 1;
}
.role-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}
.role-desc {
  font-size: 22rpx;
  color: #8c8c8c;
}
.role-check {
  width: 40rpx;
  height: 40rpx;
  background: #2b5aed;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 登录按钮 */
.login-section {
  padding: 48rpx 32rpx;
}
.btn-login {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #2b5aed;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}
.btn-login.disabled {
  background: #d9d9d9;
  color: #fff;
}
.login-tip {
  text-align: center;
  font-size: 24rpx;
  color: #bfbfbf;
  margin-top: 24rpx;
}
