<view class="page">
  <!-- 顶部 Banner -->
  <view class="banner">
    <view class="banner-title">大学生暑期"三下乡"</view>
    <view class="banner-subtitle">活动管理系统</view>
  </view>

  <!-- 用户信息卡片 -->
  <view class="user-card" wx:if="{{isLogin}}">
    <view class="user-avatar">{{userInfo.avatarText}}</view>
    <view class="user-info">
      <view class="user-name">{{userInfo.name}}</view>
      <view class="user-role">{{userInfo.roleName}}</view>
    </view>
    <view class="switch-role" bindtap="switchRole">切换身份</view>
  </view>

  <!-- 未登录提示 -->
  <view class="login-card" wx:else bindtap="goLogin">
    <view class="login-icon">👤</view>
    <view class="login-text">点击登录，选择您的身份</view>
    <view class="login-arrow">›</view>
  </view>

  <!-- 功能模块入口 -->
  <view class="module-section">
    <view class="section-title">功能模块</view>
    <view class="module-grid">
      <view class="module-card" wx:for="{{modules}}" wx:key="key" bindtap="goToPage" data-url="{{item.url}}">
        <view class="module-icon {{item.icon}}"></view>
        <view class="module-name">{{item.name}}</view>
        <view class="module-desc">{{item.desc}}</view>
      </view>
    </view>
  </view>

  <!-- 无模块提示 -->
  <view class="empty-tip" wx:if="{{modules.length === 0 && isLogin}}">
    <text>当前角色暂无可用功能模块</text>
  </view>
</view>
