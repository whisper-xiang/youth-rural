<view class="container">
  <!-- 用户信息区 -->
  <view class="user-info">
    <view class="avatar"></view>
    <view class="info">
      <view class="role">{{currentRole}}</view>
      <view class="name">{{userName || '未登录'}}</view>
    </view>
  </view>

  <!-- 功能入口区 -->
  <view class="grid">
    <view class="grid-item" bindtap="goToApply">
      <view class="icon icon-apply"></view>
      <view class="label">活动申报</view>
    </view>
    <view class="grid-item" bindtap="goToApprove">
      <view class="icon icon-approve"></view>
      <view class="label">审批管理</view>
    </view>
    <view class="grid-item" bindtap="goToProgress">
      <view class="icon icon-progress"></view>
      <view class="label">进度跟踪</view>
    </view>
    <view class="grid-item" bindtap="goToResult">
      <view class="icon icon-result"></view>
      <view class="label">成果管理</view>
    </view>
    <view class="grid-item" bindtap="goToEvaluate">
      <view class="icon icon-evaluate"></view>
      <view class="label">评优管理</view>
    </view>
    <view class="grid-item" bindtap="goToNotice">
      <view class="icon icon-notice"></view>
      <view class="label">通知公告</view>
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="quick-links">
    <view class="link-item" bindtap="goToProfile">
      <view class="link-label">个人中心</view>
      <view class="arrow">></view>
    </view>
    <view class="link-item" bindtap="goToLogin">
      <view class="link-label">切换角色</view>
      <view class="arrow">></view>
    </view>
  </view>
</view>
