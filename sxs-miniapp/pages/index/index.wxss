.page {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 120rpx;
}

/* Banner */
.banner {
  position: relative;
  background: linear-gradient(135deg, #2b5aed 0%, #5b8def 100%);
  padding: 40rpx 32rpx 48rpx;
  overflow: hidden;
}
.banner-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}
.banner-content {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.banner-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-right: 20rpx;
}
.banner-text {
  flex: 1;
}
.banner-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}
.banner-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 6rpx;
}

/* Banner 用户信息 */
.banner-user {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 48rpx;
  padding: 16rpx 24rpx 16rpx 16rpx;
}
.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.user-info {
  flex: 1;
}
.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}
.user-role {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}
.switch-role {
  font-size: 22rpx;
  color: #fff;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

/* Banner 登录按钮 */
.banner-login {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
}
.login-avatar {
  font-size: 36rpx;
  margin-right: 12rpx;
}
.login-text {
  font-size: 28rpx;
  color: #fff;
}

/* 快捷统计 */
.quick-stats {
  display: flex;
  background: #fff;
  margin: -24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(43, 90, 237, 0.12);
}
.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
}
.stat-item:last-child {
  border-right: none;
}
.stat-num {
  font-size: 44rpx;
  font-weight: 600;
  color: #2b5aed;
  margin-bottom: 8rpx;
}
.stat-label {
  font-size: 22rpx;
  color: #8c8c8c;
}

/* 模块区域 */
.module-section {
  padding: 0 24rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 8rpx 16rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.section-hint {
  font-size: 22rpx;
  color: #bfbfbf;
}

/* 模块卡片 */
.module-grid {
  display: flex;
  flex-direction: column;
}
.module-card {
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 16rpx;
  padding: 28rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}
.module-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}
.module-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
}
.icon-apply {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
}
.icon-approve {
  background: linear-gradient(135deg, #38d9a9 0%, #63e6be 100%);
}
.icon-progress {
  background: linear-gradient(135deg, #4dabf7 0%, #74c0fc 100%);
}
.icon-result {
  background: linear-gradient(135deg, #69db7c 0%, #8ce99a 100%);
}
.icon-evaluate {
  background: linear-gradient(135deg, #da77f2 0%, #e599f7 100%);
}
.icon-notice {
  background: linear-gradient(135deg, #fcc419 0%, #ffd43b 100%);
}

.module-info {
  flex: 1;
}
.module-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}
.module-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.4;
}
.module-arrow {
  font-size: 36rpx;
  color: #d9d9d9;
}

/* 空状态 */
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  margin: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}
.empty-desc {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 32rpx;
}
.empty-btn {
  padding: 20rpx 60rpx;
  background: #2b5aed;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
