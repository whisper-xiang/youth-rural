.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

/* Banner */
.banner {
  background: #2b5aed;
  padding: 48rpx 32rpx 40rpx;
  color: #fff;
}
.banner-title {
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.banner-subtitle {
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 8rpx;
  opacity: 0.85;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: #fff;
  margin: 24rpx;
  padding: 28rpx 24rpx;
  border-radius: 12rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #2b5aed;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.avatar-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}
.user-info {
  flex: 1;
}
.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
}
.user-role {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 6rpx;
}

/* 功能模块 */
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  padding: 24rpx 32rpx 16rpx;
}
.module-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 16rpx;
}
.module-card {
  width: calc(50% - 24rpx);
  background: #fff;
  margin: 8rpx 12rpx;
  padding: 32rpx 24rpx;
  border-radius: 12rpx;
}
.module-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.icon-apply {
  background: #ff6b6b;
}
.icon-approve {
  background: #38d9a9;
}
.icon-progress {
  background: #4dabf7;
}
.icon-result {
  background: #69db7c;
}
.icon-evaluate {
  background: #da77f2;
}
.icon-notice {
  background: #fcc419;
}

.module-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}
.module-desc {
  font-size: 22rpx;
  color: #8c8c8c;
  line-height: 1.5;
}
