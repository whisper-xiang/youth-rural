.page {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 120rpx;
}

/* Banner */
.banner {
  position: relative;
  background: linear-gradient(135deg, #2b5aed 0%, #5b8def 100%);
  padding: 40rpx 32rpx 48rpx;
  overflow: hidden;
}

/* 流程指引按钮 */
.process-guide-btn {
  position: absolute;
  top: 40rpx;
  right: 32rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.process-guide-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.process-icon {
  font-size: 32rpx;
  color: #fff;
}
.banner-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}
.banner-content {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.banner-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-right: 20rpx;
}
.banner-text {
  flex: 1;
}
.banner-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}
.banner-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 6rpx;
}

/* Banner 登录按钮 */
.banner-login {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
}
.login-avatar {
  font-size: 36rpx;
  margin-right: 12rpx;
}
.login-text {
  font-size: 28rpx;
  color: #fff;
}

/* 快捷统计 */
.quick-stats {
  display: flex;
  background: #fff;
  margin: -24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(43, 90, 237, 0.12);
}
.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
  padding: 8rpx 0;
  transition: all 0.3s ease;
  cursor: pointer;
}
.stat-item:last-child {
  border-right: none;
}
.stat-item:active {
  background: #f8f9fa;
  transform: scale(0.95);
}
.stat-num {
  font-size: 44rpx;
  font-weight: 600;
  color: #2b5aed;
  margin-bottom: 8rpx;
}
.stat-label {
  font-size: 22rpx;
  color: #8c8c8c;
}

/* 模块区域 */
.module-section {
  padding: 0 24rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 8rpx 16rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}
.section-hint {
  font-size: 22rpx;
  color: #bfbfbf;
}

/* 模块卡片 */
.module-grid {
  display: flex;
  flex-direction: column;
}
.module-card {
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 16rpx;
  padding: 28rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}
.module-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}
.module-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
}
.icon-apply {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
}
.icon-create {
  background: linear-gradient(135deg, #4dabf7 0%, #74c0fc 100%);
}
.icon-approve {
  background: linear-gradient(135deg, #38d9a9 0%, #63e6be 100%);
}
.icon-progress {
  background: linear-gradient(135deg, #4dabf7 0%, #74c0fc 100%);
}
.icon-result {
  background: linear-gradient(135deg, #69db7c 0%, #8ce99a 100%);
}
.icon-evaluate {
  background: linear-gradient(135deg, #da77f2 0%, #e599f7 100%);
}
.icon-notice {
  background: linear-gradient(135deg, #fcc419 0%, #ffd43b 100%);
}
.icon-notice-manage {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
}
.icon-ranking {
  background: linear-gradient(135deg, #ff922b 0%, #ffa94d 100%);
}

.module-info {
  flex: 1;
}
.module-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}
.module-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.4;
}
.module-arrow {
  font-size: 36rpx;
  color: #d9d9d9;
}

/* 空状态 */
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  margin: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}
.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}
.empty-desc {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 32rpx;
}
.empty-btn {
  padding: 20rpx 60rpx;
  background: #2b5aed;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 流程指引弹窗 */
.process-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 92%;
  max-width: 750rpx;
  height: 85vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 25rpx 80rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease forwards;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  to {
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  position: relative;
}

.modal-header::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
}

.modal-title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.modal-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.modal-close {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.9) rotate(90deg);
}

.modal-body {
  padding: 0;
  background: linear-gradient(180deg, #fafbff 0%, #f8f9fe 100%);
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 重要说明 */
.process-notice {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 40rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fef7e0 100%);
  border-left: 6rpx solid #faad14;
  margin: 24rpx 40rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(250, 173, 20, 0.15);
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  animation: shake 2s infinite;
}

@keyframes shake {
  0%,
  100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-5deg);
  }
  75% {
    transform: rotate(5deg);
  }
}

.notice-text {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #d48806;
  margin-bottom: 8rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #8c6e00;
  line-height: 1.5;
}

.process-scroll {
  flex: 1;
  padding: 36rpx 40rpx 40rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 流程步骤样式 */
.process-step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  position: relative;
  animation: slideInLeft 0.5s ease backwards;
}

.process-step:nth-child(1) {
  animation-delay: 0.1s;
}
.process-step:nth-child(2) {
  animation-delay: 0.2s;
}
.process-step:nth-child(3) {
  animation-delay: 0.3s;
}
.process-step:nth-child(4) {
  animation-delay: 0.4s;
}
.process-step:nth-child(5) {
  animation-delay: 0.5s;
}
.process-step:nth-child(6) {
  animation-delay: 0.6s;
}
.process-step:nth-child(7) {
  animation-delay: 0.7s;
}
.process-step:nth-child(8) {
  animation-delay: 0.8s;
}
.process-step:nth-child(9) {
  animation-delay: 0.9s;
}
.process-step:nth-child(10) {
  animation-delay: 1s;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.process-step:last-child {
  margin-bottom: 20rpx;
}

.process-step:not(:last-child)::after {
  content: "";
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  width: 3rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #e8e8e8 0%, transparent 100%);
  border-radius: 2rpx;
}

.step-number {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  margin-right: 28rpx;
  flex-shrink: 0;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  position: relative;
  z-index: 2;
}

.step-number::before {
  content: "";
  position: absolute;
  inset: -3rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.3;
  z-index: -1;
  animation: ripple 2s infinite;
}

@keyframes ripple {
  0% {
    transform: scale(1);
    opacity: 0.3;
  }
  100% {
    transform: scale(1.3);
    opacity: 0;
  }
}

.step-info {
  flex: 1;
  padding-top: 6rpx;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.step-role {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 500;
  background: linear-gradient(
    135deg,
    rgba(102, 126, 234, 0.1) 0%,
    rgba(118, 75, 162, 0.1) 100%
  );
  padding: 6rpx 14rpx;
  border-radius: 16rpx;
  margin-left: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  display: inline-block;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  font-weight: 400;
  margin-right: 40rpx;
}
